{% extends 'base.html.twig' %}

{% block title %}Gestion service{% endblock %}

{% block body %}
<h1>Gestion service</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenue</th>
            </tr>
        </thead>
        <tbody>
{% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.titre }}</td>
                <td>{{ service.contenue }}</td>
                <td>
                    <div>
                        <a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
                    </div>
                    <div>
                        {{ include('service/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('app_service_new') }}">Create new</a>
    </div>
{% endblock %}
