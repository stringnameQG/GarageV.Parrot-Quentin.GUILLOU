{% extends 'base.html.twig' %}

{% block title %}Gestion commentaire{% endblock %}

{% block body %}
<h1>Gestion commentaire</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Lundi</th>
                <th>Mardi</th>
                <th>Mercredi</th>
                <th>Jeudi</th>
                <th>Vendredi</th>
                <th>Samedi</th>
                <th>Dimanche</th>
            </tr>
        </thead>
        <tbody>
{% for horaire in horaires %}
            <tr>
                <td>{{ horaire.id }}</td>
                <td>{{ horaire.lundi }}</td>
                <td>{{ horaire.mardi }}</td>
                <td>{{ horaire.mercredi }}</td>
                <td>{{ horaire.jeudi }}</td>
                <td>{{ horaire.vendredi }}</td>
                <td>{{ horaire.samedi }}</td>
                <td>{{ horaire.dimanche }}</td>
                <td>
                    <div>
                        <a href="{{ path('app_horaire_edit', {'id': horaire.id}) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
