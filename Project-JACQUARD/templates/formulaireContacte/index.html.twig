{% extends 'base.html.twig' %}

{% block title %}Gestion Formulaire de Contacte{% endblock %}

{% block body %}
<h1>Gestion Formulaire de Contacte</h1>

    <table>
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Message</th>
                <th>Numéro</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
{% for formulaire in formulaires %}
            <tr>
                <td>{{ formulaire.firstname }}</td>
                <td>{{ formulaire.name }}</td>
                <td>{{ formulaire.message }}</td>
                <td>{{ formulaire.numero }}</td>
                <td>{{ formulaire.email }}</td>
                <td>
                    <div>
                        {{ include('formulaireContacte/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('app_formulaireContacte_new') }}">Create new</a>
    </div>
{% endblock %}
